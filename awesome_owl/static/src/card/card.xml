<templates xml:space="preserve">
    <t t-name="awesome_owl.card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">
                    <t t-out="props.title"/>
                    <button class="btn btn-outline-dark btn-sm" t-on-click="toggleCard">toggle</button>
                </h5>
                <p t-if="state.card_open" class="card-text"><t t-slot="default"/></p>
            </div>
        </div>
    </t>
</templates>
